<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/home">

    <fragment
        android:id="@+id/home"
        android:name="com.example.dilsequotes.fragments.Home"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_home_to_categoryQuotes"
            app:destination="@id/categoryQuotesFragment"
            app:enterAnim="@anim/fade_in"
            app:exitAnim="@anim/fade_out"
            app:popEnterAnim="@anim/fade_in"
            app:popExitAnim="@anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/dailyQuote"
        android:name="com.example.dilsequotes.fragments.DailyQuote"
        android:label="Daily Quote"
        tools:layout="@layout/fragment_daily_quote" />

    <fragment
        android:id="@+id/favorites"
        android:name="com.example.dilsequotes.fragments.Favorites"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/settings"
        android:name="com.example.dilsequotes.fragments.Settings"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/categoryQuotesFragment"
        android:name="com.example.dilsequotes.fragments.CategoryQuotesFragment"
        android:label="Category Quotes"
        tools:layout="@layout/fragment_category_quotes" />

</navigation>