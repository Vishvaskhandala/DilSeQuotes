<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient background -->
    <gradient
        android:startColor="#6671E5"
        android:endColor="#764BA2"
        android:angle="270"/>

    <!-- Rounded corners -->
    <corners android:radius="20dp"/>

    <!-- Optional elevation shadow effect (if needed visually) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
